<UserControl x:Class="DemoViewer.KillFeedEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DemoViewer"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="250">
    <Grid Margin="0,0,0,5">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Background="#2f2f2f" Height="35">
            <TextBlock x:Name="textAttackerName" Text="MSL" Foreground="#3296fa" Margin="7,2,2,2" FontSize="16" VerticalAlignment="Center"/>
            <Image x:Name="imageWeapon" Source="./killicons/ak47.png" Height="12" />
            <Image x:Name="imageWallbang" Source="./killicons/penetrate.png" Height="012"/>
            <Image x:Name="imageHeadshot" Source="./killicons/headshot.png" Height="12" />
            <TextBlock x:Name="textVictimName" Text="GOLDEN" Foreground="#fac832" Margin="2,2,7,2" FontSize="16" VerticalAlignment="Center" />
        </StackPanel>
    </Grid>
</UserControl>
