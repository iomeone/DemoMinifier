<UserControl x:Class="DemoViewer.PlayerDot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DemoViewer"
             mc:Ignorable="d" 
             d:DesignHeight="31" d:DesignWidth="31">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Margin="18,-5,-43,5" MaxWidth="100">
            <TextBlock x:Name="textName" Text="ChrisJ" Foreground="#3296fa" Background="#33000000" FontSize="12" Padding="3,0,3,0" Panel.ZIndex="2"/>
        </StackPanel>
        <Ellipse x:Name="ellipseBig" Width="23" Height="23" Fill="#3296fa" Opacity="0.2"/>
        <Ellipse x:Name="ellipseSmall" Width="13" Height="13" Fill="#3296fa" Opacity="1"/>
        <Ellipse x:Name="ellipseFlashed" Width="17" Height="17" Stroke="White" StrokeThickness="2" Opacity="1" />
        <Ellipse x:Name="ellipseVisible" Width="13" Height="13" Stroke="Magenta" StrokeThickness="3" Opacity="1" />
    </Grid>
</UserControl>
